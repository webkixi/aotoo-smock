@import "../../css/_common"
@import "../../css/animate"

after($right = 10px, $top = initial, $bottom = initial, $left = initial)
  position: absolute;
  top: $top
  right: $right
  bottom: $bottom
  left: $left

before($left = 0, $top = 0)
  position: absolute;
  top: $top
  left: $left

//第一级的左边是否需要icon
routerMenusThemeIcon($icon-left = 4px)
  .itemCategory
    width: 100%
  >ul>li
    display-flex(row, flex-start, flex-start)
    &:before
      content: '*'
      // before($icon-left)
      margin-right: 6px
//router theme配置
routerMenusTheme($background = #fff, $color= $color333, $color2 = $color666, $li-line-height = 34px, $li-icon = '>', $li-icon-select = '<', $li-icon-right = 4px, $li-select-color = #108ee9, $li-select-background = #ecf6fd, $li-select-border-right = none)
  background: $background
  li
    line-height: $li-line-height
    color: $color
    .caption
      &:after
        content: $li-icon
        after($li-icon-right)
    li
      color: $color2
    .itemrootCkb
      &:checked
        +.caption
          &:after
            content: $li-icon-select
          +ul
            display: block;
    &:not(.itemroot)
      &.select,&:hover
        color: $li-select-color
        background-color: $li-select-background
        &:after
          content: ''
          // border-left: $li-select-border-left
          border-right: $li-select-border-right
          height: @line-height
          after(0)

routerMenusLeft($width =  200px, $line-height = 34px, $padding-left = 4px, $font-size = 16px)
  position-fixed()
  width: $width
  height: 100%
  border-right: 1px solid #e3e3e3
  li
    position: relative;
    .itemCategory
      position: relative;
    .caption
      display: block;
  >ul>li
    line-height: $line-height
    font-size: $font-size
    padding-left: $padding-left
    li
      cursor: pointer;
      // line-height: @line-height - 4
      font-size: @font-size - 2
      margin-left: -3.8em
      padding-left: -(@margin-left) + 1


routerMenusPcAndMob($width =  200px, $line-height = 34px, $padding-left = 4px, $font-size = 16, $rowway = false)
  position-fixed()
  if $rowway == true
    width: $width
    .list-wrap
      display-flex(row, space-between, center)
      border-bottom: 1px solid #e3e3e3
      >ul>li ul
        display: none
    ul
      row-list(10px, flex-start)
  else
    height: 100%
    li
      position: relative;
      cursor: pointer
      .itemCategory
        position: relative;
      .caption
        display: block;
    .list-wrap
      width: $width
      margin: 0 auto
      >ul>li
        line-height: $line-height
        font-size: $font-size
        // padding-left: $padding-left
        color: #595757
        &:not(.level1)
          border-bottom: 1px solid #e3e3e3

        // abc(true, false)
        // abc()
        // if abc
        //   li
        //     background: #000
        for i in 1..6
          .level{i}
            .caption
              padding-left: 0.5rem * i
              // +ul
              //   background: #000
            // &:not(span)
            //   >ul
            //    background-color: #000
        .caption
          border-bottom: 1px solid #e3e3e3
          // &:before
          //   content: ''
          //   after(initial, initial, 0 , 0)
          //   border-bottom: 1px solid #e3e3e3
          //   width: 100%
        // li
        //   .caption
        //     padding-left: @font-size
        // ul
        //   display: none
        li
          line-height: @line-height - 4
          font-size: @font-size - 0.1
          color: $color666
          // margin-left: - @font-size
          // padding-left: -(@margin-left) + 0.4


routerBoxes()
  overflow-y: auto;
  min-height: 600px

.router-basic
